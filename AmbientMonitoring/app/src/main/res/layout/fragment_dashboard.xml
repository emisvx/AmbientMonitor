<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context=".view.fragment.DashboardFragment">


    <RelativeLayout
        android:id="@+id/dashboard_gauge_layout"
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_alignTop="@+id/dashboard_main_circle"
            android:layout_centerHorizontal="true"
            android:src="@drawable/house"
            android:tint="@color/primary_text" />

        <ImageView
            android:id="@+id/dashboard_main_circle"
            android:layout_width="300dp"
            android:layout_height="360dp"
            android:layout_centerInParent="true"
            android:src="@drawable/circle"
            android:tint="@color/primary_text" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dashboard_temperature_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="25."
                android:textColor="@color/primary_text"
                android:textSize="80sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7"
                android:textColor="@color/primary_text"
                android:textSize="40sp" />

        </LinearLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:paddingLeft="100dp"
            android:paddingRight="100dp">

            <ImageView
                android:id="@+id/dashboard_filled_circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/drop"
                android:tint="@color/primary_text" />

            <TextView
                android:id="@+id/dashboard_humidity_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/dashboard_filled_circle"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="18dp"
                android:text="0%"
                android:textColor="@color/background"
                android:textSize="40sp" />


        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dashboard_gauge_layout"
        android:layout_marginTop="20dp">

